{
  "compilerOptions": {
    "module": "NodeNext",
    // FIX TS5109: moduleResolution MUST be set to "NodeNext" when module is "NodeNext"
    "moduleResolution": "NodeNext", 
    "target": "ES2022",
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": "./", 
    "paths": {
      "*": ["src/*", "node_modules/*", "*"] 
    },
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true, 
    "allowJs": true,
    "sourceMap": false
  },
  "include": ["**/*.ts"], 
  "exclude": ["node_modules", "dist"]
}
