{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext", 
    "target": "ES2022",
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": "./", // Base set to root
    "paths": {
      // FINAL FIX: Use a simple wildcard to cover all internal files relative to the base URL
      "src/*": ["src/*"], 
      "*": ["node_modules/*", "*"] 
    },
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true, 
    "allowJs": true,
    "sourceMap": false
  },
  "include": ["**/*.ts"], 
  "exclude": ["node_modules", "dist"]
}
