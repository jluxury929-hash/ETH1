{
  "compilerOptions": {
    /* Project Options */
    "target": "es2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": ".",    /* FIXED: Source root is the current directory */

    /* Type Checking */
    "noImplicitAny": true,
    "strictNullChecks": true,

    /* Other */
    "sourceMap": false
  },
  "include": [
    "**/*.ts"          /* FIXED: Includes all .ts files recursively */
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
