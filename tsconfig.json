{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext", 
    "target": "ES2022",
    "outDir": "./dist",
    // FINAL FIX: Explicitly set rootDir to the source folder
    "rootDir": "./src", 
    "baseUrl": "./", 
    "paths": {
      "*": ["node_modules/*", "*"] 
    },
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true, 
    "allowJs": true,
    "sourceMap": false
  },
  "include": ["**/*.ts"], 
  "exclude": ["node_modules", "dist"]
}
