{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext", 
    "target": "ES2022",
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": "./", // FINAL FIX: Set baseUrl back to project root
    "paths": {
      // FINAL FIX: Map imports explicitly to 'src/*' from the root
      "config/*": ["src/config/*"],
      "types.js": ["src/types.ts"], // Map specific types file if needed
      "*": ["node_modules/*", "*"] 
    },
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true, 
    "allowJs": true,
    "sourceMap": false
  },
  "include": ["**/*.ts"], 
  "exclude": ["node_modules", "dist"]
}
