{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": "./", // FIX: Sets the project root as the base for module resolution
    "paths": {
      "*": ["src/*", "node_modules/*", "*"] // Ensures all modules are found
    },
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true, 
    "allowJs": true,
    "sourceMap": false
  },
  "include": ["**/*.ts"], 
  "exclude": ["node_modules", "dist"]
}
